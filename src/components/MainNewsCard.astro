---
interface Props {
  title: string;
  description?: string;
  image?: string;
  url: string;
}

const { title, description, image, url } = Astro.props;
---

<div class="col-span-2 flex items-center justify-center">
  <div class="inline-block text-center group">
    <a href={url} class="block mx-auto">
      <div class="overflow-hidden rounded-lg">
        <img
          class="block rounded-lg transform transition-transform duration-300 group-hover:scale-110"
          src={image}
        />
      </div>
      <h2 class="text-3xl font-semibold overflow-hidden text-ellipsis">
        {title}
      </h2>
      <p class="text-xl text-gray-600 overflow-hidden text-ellipsis">
        {description}
      </p>
    </a>
  </div>
</div>
