---
interface Props {
  data: { title:string, description?:string, image:string },
}

const {title,description,image} = Astro.props;
---

<div class="relative w-96 max-h-56">
  <img src={image} alt={`img of ${title}`} class="w-full h-auto" />
  <div class="z-30 absolute bottom-0 w-full h-20">
    <div class="-z-10 absolute bottom-0 bg-opacity-50 bg-gray-800 backdrop-blur-sm w-full min-h-full">
      <div class="text-white text-lg font-medium p-2">
        <span class="block">{title}</span>
        <span>
          {description}
        </span>
      </div>
    </div>
  </div>
</div>
