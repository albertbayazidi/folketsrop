---
interface Props {
  text: string;
  href: string;
  classes?: string;
}

const { text, href, classes, ...rest } = Astro.props as Props;
---

<a
  href={href}
  class:list={[
    "link",
    "text-lg md:text-xl px-2 pb-1  border-b-2 border-opacity-0",
    "border-black hover:border-opacity-100 transition-colors duration-150 ease-linear",
    classes,
  ]}
  {...rest}
>
  <span>{text}</span>
</a>
