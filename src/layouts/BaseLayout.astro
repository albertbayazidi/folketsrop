---
import { fade } from "astro:transitions";
import { ViewTransitions } from "astro:transitions";
import BaseHead from "../components/BaseHead.astro";
import Navbar from "../components/Navbar.astro";

interface Props {
  currentTab: string;
}

const { currentTab, ...head } = Astro.props;
---

<!doctype html>
<html>
  <head>
    <BaseHead {...head} />
    <ViewTransitions />
  </head>
  <body class="px-5 md:mx-2">
    <div class="flex mt-5">
      <a href="/" class="inline-flex">
        <img src="../../faveicon.png" class="mr-2 w-20" />
        <h1 class="font-bold text-4xl my-auto">Folketsrop</h1>
      </a>
    </div>
    <Navbar currentTab={currentTab} />
    <main transition:animate={fade({ duration: "0.25s" })}>
      <div class="sm:w-threeNews">
        <slot />
      </div>
    </main>
  </body>
</html>
