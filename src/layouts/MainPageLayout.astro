---
import { fade } from "astro:transitions";
import { ViewTransitions } from "astro:transitions";
import BaseHead from "../components/BaseHead.astro";
import Navbar from "../components/Navbar.astro";
import MainNewsCard from "../components/MainNewsCard.astro";

interface Props {
  currentTab: string;
  mainNews: { title: string; description?: string; image: string };
}

const { currentTab, mainNews, ...head } = Astro.props;
---

<!doctype html>
<html>
  <head>
    <BaseHead {...head} />
    <ViewTransitions />
  </head>
  <body class="px-5 md:mx-2">
    <div class="flex mt-5">
      <a href="/" class="inline-flex">
        <img src="../../faveicon.png" class="mr-2 w-20" />
        <h1 class="font-bold text-4xl my-auto">Folketsrop</h1>
      </a>
    </div>
    <Navbar currentTab={currentTab} />
    <main transition:animate={fade({ duration: "0.25s" })}>
      <div>
        <MainNewsCard
          title={mainNews.title}
          description={mainNews.description}
          image={mainNews.image}
        />
      </div>
    </main>
  </body>
</html>
